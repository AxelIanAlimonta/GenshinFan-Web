---
import logo from "../assets/images/logo.png";
import { Image } from "astro:assets";
import btnPlayBlanco from "../assets/images/icons/play-btn-blanco.png";
import type { Video as VideoType } from "../types/Video";
import TextoOrnamentado from "./TextoOrnamentado.astro";

const video: VideoType = {
  titulo: "Video de prueba",
  url: "https://youtu.be/rZ6C6iPuNfw?si=O37etDPD60wGOmD_",
  fechaPublicacion: "2023-10-01",
  personajeId: 1,
  etiquetas: [],
};
---

<div class="w-full h-screen relative flex flex-col justify-evenly items-center">
  <video
    src="/portada-video.mp4"
    class="w-full h-full object-cover object-[35%] absolute left-0 -z-50"
    preload="auto"
    autoplay
    loop
    muted
    playsinline></video>

  <Image
    src={logo}
    alt="Botón de reproducción"
    class="w-64 md:w-94 filter [drop-shadow(0_0_3px_rgba(255,0,0,0.8))] [drop-shadow(0_0_6px_rgba(255,0,0,0.8))]"
    id="play-button"
    width={1280}
    height={720}
  />
  <TextoOrnamentado fill="white" width={100} height={50}>
    <a
      href={video.url}
      class="cursor-pointer block hover:scale-110 transition-transform duration-300 ease-in-out"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Image src={btnPlayBlanco} alt="Logo" class="w-16 h-fit" />
    </a>
  </TextoOrnamentado>
</div>

